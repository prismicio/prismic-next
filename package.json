{
	"name": "@prismicio/next",
	"version": "1.0.2",
	"description": "Helpers to integrate Prismic into Next.js apps",
	"keywords": [
		"typescript",
		"prismic",
		"next",
		"vercel",
		"preview"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/prismicio/prismic-next"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"sideEffects": false,
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"format": "prettier --write .",
		"lint": "eslint --ext .js,.ts .",
		"prepare": "npm run build",
		"release": "npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:alpha": "npm run test && standard-version --release-as patch --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as patch --prerelease alpha --dry-run",
		"release:dry": "standard-version --dry-run",
		"size": "size-limit",
		"test": "npm run lint && npm run unit && npm run build && npm run size",
		"unit": "vitest run --coverage",
		"unit:watch": "vitest watch"
	},
	"dependencies": {
		"@prismicio/helpers": "^2.3.6",
		"@prismicio/types": "^0.2.4",
		"imgix-url-builder": "^0.0.3"
	},
	"devDependencies": {
		"@prismicio/client": "^6.7.1",
		"@prismicio/mock": "^0.1.1",
		"@size-limit/preset-small-lib": "^8.1.0",
		"@types/react-test-renderer": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"@vitejs/plugin-react": "^3.0.0",
		"@vitest/coverage-c8": "^0.25.8",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"happy-dom": "^8.1.0",
		"next": "^13.0.0",
		"prettier": "^2.8.1",
		"prettier-plugin-jsdoc": "^0.4.2",
		"react": "^18.1.0",
		"react-dom": "^18.2.0",
		"react-test-renderer": "^18.2.0",
		"size-limit": "^8.1.0",
		"standard-version": "^9.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.1",
		"vite-plugin-sdk": "^0.1.0",
		"vitest": "^0.25.8"
	},
	"peerDependencies": {
		"@prismicio/client": "^6",
		"next": "^13",
		"react": "^18"
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
